<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/list_horizonal_matgin"
    android:layout_marginRight="@dimen/list_horizonal_matgin"
    android:layout_marginStart="@dimen/list_horizonal_matgin"
    android:layout_marginEnd="@dimen/list_horizonal_matgin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    style="@style/LayoutRTL"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">
    <ListView
        android:layout_width="match_parent"
        style="@style/LayoutRTL"
        android:layout_height="match_parent"
        android:id = "@+id/scores_list"
        android:divider="@android:color/transparent"
        android:dividerHeight="15sp"
        />

    <TextView
        android:id="@+id/tv_emptyview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/LayoutRTL"
        android:text="@string/no_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        />
</FrameLayout>
